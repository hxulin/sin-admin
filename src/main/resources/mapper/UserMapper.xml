<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.ldxy.sin.system.mapper.UserMapper">

    <sql id="BaseColumn">
        `id`, `login_name`, `password`, `nickname`, `status`, `create_uid`, `update_uid`, `create_time`, `update_time`
    </sql>
    
    <select id="selectByLoginName" resultType="tech.ldxy.sin.system.model.entity.User">
        select <include refid="BaseColumn"/>
        from sys_user
        where login_name = #{loginName}
    </select>

    <select id="loginNameIsExist" resultType="int">
        select count(id)
        from sys_user
        where login_name = #{loginName}
        <if test="uid != null">
            and id != #{uid}
        </if>
    </select>

</mapper>
